<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    tools:context=".HomeFragment">

    <EditText
        android:id="@+id/searchCard"
        android:layout_width="244dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Type artist name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewArtists" />

    <ListView
        android:id="@+id/listViewArtists"
        android:layout_width="319dp"
        android:layout_height="172dp"
        android:layout_marginTop="84dp"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:listSelector="#4A4949"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="440dp"
        android:backgroundTint="#6750A3"
        android:text="Backup"
        app:layout_constraintEnd_toStartOf="@+id/restoreButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="84dp"
        android:backgroundTint="#6750A2"
        android:text="Restore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/addArtistButton"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:background="#1C1C1C"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/searchCard"
        app:layout_constraintTop_toBottomOf="@+id/listViewArtists"
        app:srcCompat="@drawable/plusle" />

    <ImageButton
        android:id="@+id/deleteArtistButton"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="#1C1C1C"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/searchCard"
        app:layout_constraintTop_toBottomOf="@+id/listViewArtists"
        app:srcCompat="@drawable/minun" />

</androidx.constraintlayout.widget.ConstraintLayout>